<h1>新增帳號</h1>
<%if @member%>
	<% if @member.errors.any? %>
	</br>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %></h2>
      <ul>
      <% @member.errors.each do |key, value| %>
        <li><%= value %></li>
      <% end %>
      </ul>
    </div>
	<% end %>
<% end %>

<%=form_tag do%>
	<div class="field">
    <label>姓名</label><br />
	<%=text_field_tag :name, params[:name]%>
  	</div>
    <div class="field">
    <label>email</label><br />
	<%=text_field_tag :email, params[:email]%>
    </div>
  	<div class="actions">	
	<%=submit_tag "送出"%>
	</div>
<%end%>