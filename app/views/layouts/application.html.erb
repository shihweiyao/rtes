		contentsource: "markup" //"markup" or ["container_id", "path_to_menu_file"]
	})
  </script>
</head>
<body>
	
<div id="templatemo_container">  
	<%=render "layouts/header" %>
	<%=render "layouts/menu" %>

	<div id="templatemo_content">     
		<p id="notice"><%= @notice %></p><br>
		<%= yield %>    
